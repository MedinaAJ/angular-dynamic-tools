{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "declaration": true,
      "module": "esnext",
      "target": "es2015",
      "moduleResolution": "node",
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "lib": [
        "es2018",
        "dom"
      ]
    },
    "angularCompilerOptions": {
      "enableIvy": true,
      "compilationMode": "partial"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  